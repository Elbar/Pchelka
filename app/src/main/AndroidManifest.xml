<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kg.vista.beeserviceclient"
    android:installLocation="auto"
    >


    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"
        />

    <application
        android:name="com.kg.vista.beeserviceclient.boot.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <activity android:name=".activity.DrawerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".activity.ChooseCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BeeTheme"/>
        <activity
            android:name=".activity.ChooseSubCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BeeTheme"/>


        <activity
            android:name=".activity.DescriptionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BeeTheme"/>


    </application>

</manifest>